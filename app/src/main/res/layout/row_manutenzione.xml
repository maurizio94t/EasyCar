<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/giorno"
                    android:paddingRight="19dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="31"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#da3838"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"></TextView>
                <TextView
                    android:id="@+id/mese"
                    android:paddingRight="@dimen/paddingRightIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:gravity="center"
                    android:textSize="19dp"
                    android:text="LUG"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#b61717"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"></TextView>
                <TextView
                    android:id="@+id/anno"
                    android:paddingRight="@dimen/paddingRightIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textSize="10dp"
                    android:text="2001"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#b61717"
                    android:layout_below="@+id/mese"
                    android:layout_alignLeft="@+id/giorno"
                    android:layout_alignStart="@+id/giorno"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"></TextView>

                      </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:gravity="center"
                    android:paddingRight="30dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/auto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Auto"
                            android:textSize="14dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#000000"></TextView>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/descrizione"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:text="aaaaaaaaaaaaffffffffffffffffff"                      android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#6b71f1"></TextView>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="50dp"
                >
                <TextView
                    android:id="@+id/ordinaria"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ordinaria"
                    android:gravity="left"></TextView>
                <TextView
                    android:id="@+id/valoreOrdinaria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Si"
                    android:textColor="#b61717"
                    android:gravity="left"
                    android:layout_below="@+id/ordinaria"
                    android:layout_centerHorizontal="true"></TextView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="50dp"

                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/km"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Km"
                    android:textSize="14dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"></TextView>
                <TextView
                    android:id="@+id/kmView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20000km"
                    android:textColor="#b61717"
                    android:layout_below="@+id/km"
                    android:gravity="left"></TextView>
            </RelativeLayout>
        </LinearLayout>
</LinearLayout>

    </LinearLayout>