<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip"
    >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/giorno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="31"
                    android:gravity="center_horizontal"
                    android:textSize="15dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#da3838"></TextView>
                <TextView
                    android:id="@+id/mese"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="19dp"
                    android:text="LUG"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#b61717"
                  ></TextView>
                <TextView
                    android:id="@+id/anno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="2001"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#b61717"
                   ></TextView>

                      </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/auto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Auto"
                            android:textSize="19dp"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#000000"></TextView>


                    <TextView
                        android:id="@+id/descrizione"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:text=""                      android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#6b71f1"></TextView>
                </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/ordinaria"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ordinaria"
                    android:gravity="center"></TextView>
                <TextView
                    android:id="@+id/valoreOrdinaria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Si"
                    android:textColor="#b61717"
                    android:gravity="center"
                    android:layout_below="@+id/ordinaria"
                  ></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/km"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Km"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"></TextView>
                <TextView
                    android:id="@+id/kmView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20000km"
                    android:textColor="#b61717"
                    android:layout_below="@+id/km"
                    android:gravity="center"></TextView>
            </LinearLayout>
    </LinearLayout>

