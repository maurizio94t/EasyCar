<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF7043"
    tools:context="ddt.sms16.ivu.di.uniba.it.easycar.RegistrazioneUtente">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"></android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"

        >

        <EditText
            android:id="@+id/nomeUtente"
            android:layout_width="@dimen/withEditTextForm"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:hint="@string/nomeUtente"
            android:drawableLeft="@drawable/ic_account_circle_white_24dp"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/formTextSize"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/cognomUtente"
            android:layout_width="@dimen/withEditTextForm"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:drawableLeft="@drawable/ic_account_circle_white_24dp"
            android:hint="@string/cognomeUtente"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/formTextSize"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/dataUtente"
            android:textAlignment="center"
            android:layout_width="@dimen/withEditTextForm"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_date_range_white_24dp"
            android:layout_marginTop="20dp"
            android:hint="@string/dataNascita"
            android:inputType="text"
            android:singleLine="true"

            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/formTextSize"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/email"
            android:layout_width="@dimen/withEditTextForm"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_mail_outline_white_24dp"
            android:textAlignment="center"
            android:hint="@string/email"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/formTextSize"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/password"
            android:layout_width="@dimen/withEditTextForm"
            android:drawableLeft="@drawable/ic_vpn_key_white_24dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/password"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/formTextSize"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/repeatPassword"
            android:layout_width="@dimen/withEditTextForm"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:hint="@string/ripetiPassword"
            android:drawableLeft="@drawable/ic_vpn_key_white_24dp"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/formTextSize"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnRegistraUtente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_round_corner"
            android:text="@string/Registrati"
            android:textColor="@color/colorTextPrimary" />

    </LinearLayout>

</LinearLayout>
