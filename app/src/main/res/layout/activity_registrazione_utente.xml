<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ddt.sms16.ivu.di.uniba.it.easycar.RegistrazioneUtente">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/colorManutenzione"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:orientation="vertical"
        android:paddingLeft="@dimen/paddingLeftForm"
        android:paddingTop="@dimen/paddingTop">
        <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/nomeUtente"
                    android:layout_width="@dimen/withEditTextForm"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/formTextSize"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:hint="@string/nomeUtente"
                    android:singleLine="true" />

                <Button
                    android:visibility="gone"
                    android:id="@+id/cancella_nome"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/ic_clear_black_24dp"/>
   </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
                    android:id="@+id/cognomUtente"
                    android:layout_width="@dimen/withEditTextForm"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="@dimen/formTextSize"
                    android:hint="@string/cognomeUtente"
                    android:singleLine="true" />

                <Button

                    android:visibility="gone"
                    android:id="@+id/cancella_cognome"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/ic_clear_black_24dp"/>

    </LinearLayout>
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/dataUtente"
                    android:layout_width="@dimen/withEditTextForm"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/formTextSize"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:hint="@string/dataNascita"
                    android:singleLine="true" />

                <Button

                    android:visibility="gone"
                    android:id="@+id/cancella_data"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/ic_clear_black_24dp"/>

   </LinearLayout>
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/email"
                    android:layout_width="@dimen/withEditTextForm"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/formTextSize"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:hint="@string/email"
                    android:singleLine="true" />

                <Button
                    android:visibility="gone"
                    android:id="@+id/cancella_mail"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/ic_clear_black_24dp"/>
    </LinearLayout>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invia"
        android:id="@+id/registraUtente"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="prova"
        android:id="@+id/testString"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    </LinearLayout>

</LinearLayout>
