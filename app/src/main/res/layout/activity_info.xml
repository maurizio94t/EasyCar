<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="25dp">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/icon"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher"
        />
    <TextView
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EasyCar"
        android:fontFamily="casual"
        android:textSize="30sp"/>

    <TextView
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seguici "
        android:fontFamily="serif"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       android:layout_gravity="center"
        android:paddingTop="50dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <ImageView
            android:id="@+id/giuseppe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_facebook_box_white_24dp"
            android:paddingRight="@dimen/paddingTop"
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Giuseppe De Marzo"
                android:textColor="@color/colorTitle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/paddingTop">
            <ImageView
                android:id="@+id/enrico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_facebook_box_white_24dp"
                android:paddingRight="@dimen/paddingTop"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Enrico D'Elia"
                android:textColor="@color/colorTitle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/paddingTop">
            <ImageView
                android:id="@+id/maurizio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_facebook_box_white_24dp"
                android:paddingRight="@dimen/paddingTop"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Maurizio Troiani"
                android:textColor="@color/colorTitle"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:paddingTop="100dp"
        >
        <ImageView
            android:id="@+id/mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mail_outline_white_24dp"
            android:paddingRight="@dimen/paddingRightIcon"
           />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ddtgroupcorporatio@gmail.com"
            android:textColor="@color/colorTitle"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>