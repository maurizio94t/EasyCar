<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/paddingTop"
            android:paddingLeft="@dimen/paddingLeft"
            android:textSize="@dimen/text_size"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Descrizione"
            android:id="@+id/textView1"
            android:paddingBottom="5dp"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_targa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:padding="5dp">

                <EditText
                    android:id="@+id/descrizioneManutenzione"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginTop="20dp"
                    android:textSize="25dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:hint="@string/targa"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/delete_targa"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/ic_clear_black_24dp"/>

            </FrameLayout>

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:paddingLeft="@dimen/paddingLeft"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Data scadenza"
            android:id="@+id/textView2"
            android:paddingBottom="5dp"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_scadenza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:padding="5dp">

                <EditText
                    android:id="@+id/data_scadenza"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:layout_marginTop="20dp"
                    android:textSize="25dp"
                    android:onClick="onClick"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:hint="@string/scadenza"
                    android:singleLine="true" />

            </FrameLayout>

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:paddingLeft="@dimen/paddingLeft"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Chilometri manutenzione"
            android:id="@+id/textView3"
            android:paddingBottom="5dp"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_manutenzione"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:padding="5dp">

                <EditText
                    android:id="@+id/chilometraggio_auto"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:layout_marginTop="20dp"
                    android:textSize="25dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:hint="@string/chilometraggio"
                    android:singleLine="true" />
                <Button
                    android:id="@+id/delete_chilometri"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/ic_clear_black_24dp"/>
            </FrameLayout>

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_veicolo" />
    <Button
        android:id="@+id/bottoneAggiungiManutenzione"
        android:layout_gravity="center"
        android:text="Invia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>