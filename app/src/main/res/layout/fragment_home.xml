<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorTitle">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="30dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true">
            <ImageView
                android:id="@+id/imgParcheggio"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_google_maps_grey600_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textParcheggio"
                android:layout_height="wrap_content"
                android:text="Parcheggio"
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_below="@+id/imgParcheggio"
                android:layout_alignLeft="@+id/imgParcheggio"
                android:layout_alignStart="@+id/imgParcheggio"
                android:layout_gravity="center_horizontal" />
            <Button
                android:id="@+id/btnPosizione"
                android:layout_width="110dp"
                android:layout_below="@+id/textParcheggio"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:background="@drawable/button_round_corner"
                android:text="Salva"
                android:textColor="@color/colorTitle"
                android:textSize="10dp"
                />
</LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="25dp"
                android:paddingLeft="30dp"
                >
                <ImageView
                    android:id="@+id/carIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:src="@drawable/ic_car_grey600_24dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:gravity="center"
                    android:paddingLeft="@dimen/paddingLeft"
                    android:paddingTop="6dp"
                    android:layout_width="wrap_content"
                    android:id="@+id/textAuto"
                    android:layout_height="wrap_content"
                    android:text="Auto"
                    android:textSize="15dp"
                       />

            </LinearLayout>

        </RelativeLayout>
</android.support.v7.widget.CardView>
        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:layout_weight="1.50"></ListView>

    </LinearLayout>
</FrameLayout>

